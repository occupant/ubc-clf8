{% extends "layouts/default.twig" %}
{% set title = "Components Page" %}
{% set pageTitle = "HR Web Styles" %}
{% set pageTeaser = "Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor." %}
{% set pageIntro = "Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum." %}
{% set pageFeatureTitle = "It all starts here." %}
{% set pageFeatureTeaser = "Join Students from across Canada and around the globe and see why they choose UBC CBS's world-class program." %}
{% set pageFeatureTitle = "Plan. Manage. Collaborate." %}
{% set pageFeatureImage = "4.jpg" %}

{% block content %}
<main class="unit-content">
	<div class="container mx-auto p-4 ">

		<h1 class="text-ubc-blue">{{ pageTitle }}</h1>
		<h2 class="text-ubc-blue-cobalt">Base Styles</h2>

		<h3 class="uppercase mt-12">Colours</h3>
		<hr />
		{% include "components/colors.twig" %}

		<h3 class="uppercase mt-12">Typography</h3>
		<hr />
		{% include "components/type.twig" %}

		<h3 class="uppercase mt-12">SVG Icons</h3>
		<hr />
		{% include "components/component--icons.twig" %}
		<p><strong>Medium icons (2 rem w and h)</strong></p>
		{% include "components/component--icons-medium.twig" %}
		<p><strong>Smaller icons (1.5 rem w and h)</strong></p>
		{% include "components/component--icons-mid.twig" %}
		<p><strong>Small icons (1 rem w and h)</strong></p>
		{% include "components/component--icons-small.twig" %}
		<p><strong>Medium icons - stroke doesn't scale (2 rem w and h)</strong></p>
		{% include "components/component--icons-medium--stroke-noscale.twig" %}
		<p><strong>Natural icons (size same as svg) - stroke doesn't scale (4 rem w and h)</strong></p>
		{% include "components/component--icons-natural--stroke-noscale.twig" %}

		<p><strong>Icons (changing size and stroke width)</strong></p>
		{% include "components/component--icons-resizing.twig" %}

		<h3 class="uppercase mt-12">Navigation: Subnavigation</h3>
		<hr />
		{% include "components/navigation--sub.twig" %}

		<h3 class="uppercase mt-12">Navigation: Breadcrumbs</h3>
		<hr />
		{% include "components/navigation--breadcrumbs.twig" %}
		<p>[<a
				href="https://www.w3.org/TR/wai-aria-practices-1.1/#breadcrumb">https://www.w3.org/TR/wai-aria-practices-1.1/#breadcrumb</a>]
		</p>

		<h3 class="uppercase mt-12">Buttons</h3>
		<hr />
		{% include "components/component--buttons.twig" %}

		<h3 class="uppercase mt-12">Tables</h3>
		<hr />
		{% include "components/component--tables.twig" %}

		<h3 class="uppercase mt-12">Forms</h3>
		<hr />
		{% include "components/form--sample.twig" %}
		{% include "components/navigation--pager.twig" %}
		<!-- {% include "components/component--throbber.twig" %} -->
		<p>[<a
				href="https://www.w3.org/TR/wai-aria-practices-1.1/#checkbox">https://www.w3.org/TR/wai-aria-practices-1.1/#checkbox</a>]
		</p>
		<p>[<a
				href="https://www.w3.org/TR/wai-aria-practices-1.1/#radiobutton">https://www.w3.org/TR/wai-aria-practices-1.1/#radiobutton</a>]
		</p>
		<p>[<a
				href="https://www.w3.org/TR/wai-aria-practices-1.1/#slider">https://www.w3.org/TR/wai-aria-practices-1.1/#slider</a>]
		</p>
		<p>[<a
				href="https://www.w3.org/TR/wai-aria-practices-1.1/#combobox">https://www.w3.org/TR/wai-aria-practices-1.1/#combobox</a>]
		</p>
		<p>[<a
				href="https://www.w3.org/TR/wai-aria-practices-1.1/#Listbox">https://www.w3.org/TR/wai-aria-practices-1.1/#Listbox</a>]
		</p>

		<h3 class="uppercase mt-12">Accordions</h3>
		<hr />
		{% include "components/component--accordion.twig" %}
		<p>[<a
				href="https://www.w3.org/TR/wai-aria-practices-1.1/#disclosure">https://www.w3.org/TR/wai-aria-practices-1.1/#disclosure</a>]
		</p>
		<p>[<a
				href="https://www.w3.org/TR/wai-aria-practices-1.1/examples/accordion/accordion.html">https://www.w3.org/TR/wai-aria-practices-1.1/examples/accordion/accordion.html</a>]
		</p>
		<h3 class="uppercase mt-12">Details and Summary elements</h3>
		<hr />
		<details>
			<summary>Copyright 1999-2019.</summary>
			<p>&mdash; by the University of British Columbia. All Rights Reserved.</p>
		</details>
		<p class="text-grey-500">Note that there are support issues with the summary / details elements: [<a
				href="https://caniuse.com/#search=details">https://caniuse.com/#search=details</a>]</p>

		<h3 class="uppercase mt-12">Media</h3>
		<hr />
		{% include "components/media--image-w-caption.twig" %}
		<div class="media-wrapper mb-4">
			{% include "components/media--video.twig" %}
		</div>
		<div class="media-wrapper">
			{% include "components/media--map.twig" %}
		</div>

		<h3 class="uppercase mt-12">Callouts (with lists inside)</h3>
		<hr />
		{% include "components/component--callout.twig" %}

		<h3 class="uppercase mt-12">Carousel</h3>
		<hr />
		{% include "components/component--carousel.twig" %}
		<p>[<a
				href="https://www.w3.org/TR/2019/NOTE-wai-aria-practices-1.1-20190207/examples/carousel/carousel-1/carousel-1.html">https://www.w3.org/TR/2019/NOTE-wai-aria-practices-1.1-20190207/examples/carousel/carousel-1/carousel-1.html</a>]
		</p>

		<h3 class="uppercase mt-12">Full bleed content in container</h3>
		<hr />
		<h2>Some title</h2>
		<p>Some text in a container</p>
		<div class="bg-ubc-blue full-bleed p-6 text-white my-6">
			<h2>Some title</h2>
			<p>Some text in a container in a full bleed region</p>
			<!-- need to add the same markup as the body container to replicate it -->
			<div class="container mx-auto p-4">
				<p>Some text in a container in a full bleed region in a container!</p>
			</div>
		</div>
		<p>Some text in a container</p>

		<h3 class="uppercase mt-12">Blockquote</h3>
		<hr />
		{% include "components/type--blockquote.twig" %}

		<h3 class="uppercase mt-12">Messages</h3>
		<hr />
		{% include "components/component--message.twig" %}

		<h3 class="uppercase mt-12">Boxes</h3>
		<hr />
		{% include "components/component--box.twig" %}

		<h3 class="uppercase mt-12">Campus content labels</h3>
		<hr />
		{% include "components/component--campus-content-label.twig" %}

		<h3 class="uppercase mt-12">Cards</h3>
		<hr />
		{% include "components/component--card.twig" %}

		<h3 class="uppercase mt-12">Tabcordions: Tabs (Desktop) to Accordions (Mobile)
		</h3>
		<hr />
		{% include "components/component--tabs.twig" %}
		<p>[<a
				href="https://www.w3.org/TR/wai-aria-practices-1.1/#tabpanel">https://www.w3.org/TR/wai-aria-practices-1.1/#tabpanel</a>]
		</p>

		<h3 class="uppercase mt-12">First Nations Acknowledgement
		</h3>
		<hr />
		<p class="text-sm">We acknowledge that UBC’s two main campuses are located on the traditional, ancestral and
			unceded territories of the xʷməθkʷəy̓əm (Musqueam) and Syilx (Okanagan) peoples.</p>
	</div>
</main>

{% endblock %}

{% block custom_css %}
<style>
	.stroke-noscale {
		vector-effect: non-scaling-stroke;
	}

</style>
{% endblock %}

{% block custom_javascript %}
<!-- <script src="js/ubc.all.js"></script> -->
{% endblock %}
