{% extends "layouts/plain.twig" %}
{% set title = "Grid Test | UBC Human Resources" %}
{% set pageTitle = "A basic page" %}

{% block content %}
<main class="container mx-auto px-4 md--px-0 py-4 bg-grey-50 border-dashed border">
  <h3>Columns distributed equally</h3>
  <div class="flex -mx-2 bg-grey-200">
    <div class="flex-1 p-2">
      <div class="bg-grey-400 text-center p-4">some text 1</div>
    </div>
    <div class="flex-1 p-2">
      <div class="bg-grey-400 text-center p-4">some text 2</div>
    </div>
    <div class="flex-1 p-2">
      <div class="bg-grey-400 text-center p-4">some text 3</div>
    </div>
    <div class="flex-1 p-2">
      <div class="bg-grey-400 text-center p-4">some text 4</div>
    </div>
  </div>

  <h3>Columns with % widths</h3>
  <div class="flex -mx-2 bg-grey-200">
    <div class="w-one-quarter p-2">
      <div class="bg-grey-400 text-center p-4">some text - 1/4</div>
    </div>
    <div class="w-half p-2">
      <div class="bg-grey-400 text-center p-4">some text - 1/2</div>
    </div>
    <div class="w-one-quarter p-2">
      <div class="bg-grey-400 text-center p-4">some text - 1/4</div>
    </div>
  </div>

  <h3>Columns with % widths 2</h3>
  <div class="flex -mx-2 bg-grey-200">
    <div class="w-one-sixth p-2">
      <div class="bg-grey-400 text-center p-4">some text - 1/6</div>
    </div>
    <div class="w-one-quarter p-2">
      <div class="bg-grey-400 text-center p-4">some text - 1/4</div>
    </div>
    <div class="w-one-third p-2">
      <div class="bg-grey-400 text-center p-4">some text - 1/3</div>
    </div>
    <div class="w-one-third p-2">
      <div class="bg-grey-400 text-center p-4">some text - 1/3</div>
    </div>
  </div>

  <h3>Responsive Columns with % widths</h3>
  <div class="sm--flex sm--flex-wrap -mx-2 bg-grey-200">
    <div class="sm--w-half md--w-one-quarter p-2">
      <div class="bg-grey-400 text-center p-4">some text - 1/4</div>
    </div>
    <div class="sm--w-half md--w-half p-2">
      <div class="bg-grey-400 text-center p-4">some text - 1/2</div>
    </div>
    <div class="w-full md--w-one-quarter p-2">
      <div class="bg-grey-400 text-center p-4">some text - 1/4</div>
    </div>
  </div>

  <h3>Responsive Columns with % widths and order change</h3>
  <div class="sm--flex sm--flex-wrap -mx-2 bg-grey-200">
    <div class="sm--w-half order-third xl--order-second md--w-one-quarter p-2">
      <div class="bg-grey-400 text-center p-4">first div</div>
    </div>
    <div class="sm--w-half order-first xl--order-last md--w-half p-2">
      <div class="bg-grey-400 text-center p-4">second div</div>
    </div>
    <div class="w-full order-second xl--order-first md--w-one-quarter p-2">
      <div class="bg-grey-400 text-center p-4">third div</div>
    </div>
  </div>
</main>
{% endblock %}

