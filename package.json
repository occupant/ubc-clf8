{
	"name": "ubc-clf8",
	"version": "0.0.1",
	"description": "Common Look and Feel framework for UBC",
	"sasslintConfig": "config/.sass-lint.yml",
	"browserslist": [
		"> 1%"
	],
	"scripts": {
		"test": "snyk test",
		"csslint": "sass-lint -c config/.sass-lint.yml 'src/**/*.scss' -v -q -i 'src/sass/vendor/*'",
		"cssbuild": "node-sass src/scss/ -o build/css/ -r --output-style expanded --indent-type tab --indent-width 1 && node-sass src/scss/ -o dist/css/ -r --output-style compressed",
		"cssdeploy": "node-sass src/scss/ -o dist/css/ -r --output-style compressed",
		"csswatch": "node-sass src/scss/ -w -o build/css/ -r --output-style expanded --indent-type tab --indent-width 1"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/UBCCM/ubc-clf8.git"
	},
	"keywords": [
		"clf",
		"ubc"
	],
	"author": "UBC Communications & Marketing",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/UBCCM/ubc-clf8/issues"
	},
	"homepage": "https://github.com/UBCCM/ubc-clf8#readme",
	"dependencies": {
		"autoprefixer": "^9.5.1",
		"node-sass": "^4.12.0",
		"postcss-cli": "^6.1.2",
		"purgecss": "^1.3.0"
	},
	"devDependencies": {
		"sass-lint": "^1.13.1",
		"snyk": "^1.154.0",
		"tailwindcss": "^1.0.0-beta.8"
	}
}
